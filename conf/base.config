/*
========================================================================================
    Base Process Configuration
========================================================================================
*/

process {
    cpus   = 1
    memory = 4.GB
    time   = 2.h
    
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries    = 2
    maxErrors     = '-1'
    
    withLabel:process_low {
        cpus   = 2
        memory = 8.GB
        time   = 4.h
    }
    
    withLabel:process_medium {
        cpus   = 4
        memory = 16.GB
        time   = 8.h
    }
    
    withLabel:process_high {
        cpus   = 8
        memory = 20.GB  // Reduced to fit your system
        time   = 16.h
    }
}